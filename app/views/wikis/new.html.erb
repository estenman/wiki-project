<h1>New Wiki</h1>

<div class="row">
  <div class="col-md-4">
    <p>Guidelines for wikis</p>
    <ul>
      <li>Be original</li>
      <li>Be informative</li>
      <li>Be nice</li>
    </ul>
  </div>

  <div class="col-md-8">
    <%= form_for @wiki do |f| %>
      <div class="form-group">
        <%= f.label :title %>
        <%= f.text_field :title %><br>
      </div>
      <div class="form-group">
      <%= f.label :body %>
      <%= f.text_area :body %><br>
      </div>
      <div class="form-group">
      <%= f.label :private %>
      <%= f.check_box :private %><br>
      </div>
      <div class="form-group">
      <%= f.submit "Save" %>
      </div>
    <% end %>
  </div>
</div>
