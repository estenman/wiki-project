<h1>All Wikis</h1>
<div class="row">
  <div class="col-md-8">
    <% if current_user.role == "standard" %>
      <% @wikis.each do |wiki| %>
        <% if !wiki.private? %>
          <div class="media">
            <div class="media-body">
              <h4 class="media-heading">
                  <p><%= link_to wiki.title, wiki_path(wiki.id) %></p>
              </h4>
            </div>
          </div>
        <% end %>
      <% end %>
    <% end %>

    <% if current_user.role == "admin" || current_user.role == "premium" %>
      <% @wikis.each do |wiki| %>
        <% if !wiki.private? || wiki.user_id == current_user.id %>
          <div class="media">
            <div class="media-body">
              <h4 class="media-heading">
                  <p><%= link_to wiki.title, wiki_path(wiki.id) %></p>
              </h4>
            </div>
          </div>
        <% end %>
      <% end %>
    <% end %>
  </div>
  <div class="col-md-4">
    <%= link_to "Create a wiki", new_wiki_path, class: 'btn btn-success' %>
  </div>
</div>
